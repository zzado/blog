---
import Layout from '../layouts/Layout.astro';
const { BASE_URL } = import.meta.env;
const homeUrl = BASE_URL.endsWith('/') ? BASE_URL : BASE_URL + '/';
---

<Layout>
	<div class="flex flex-col items-center justify-center min-h-[70vh] px-4 text-center">
		<h1 class="text-9xl font-black text-gray-200 dark:text-gray-800">404</h1>
		<p class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
			Uh-oh!
		</p>
		<p class="mt-4 text-gray-500 dark:text-gray-400">
			We can't find that page.
		</p>
		<a href={homeUrl} class="mt-6 inline-flex items-center rounded-md bg-blue-600 px-5 py-3 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-colors">
			Go back home
		</a>
	</div>
</Layout>
