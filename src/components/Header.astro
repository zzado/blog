<script is:inline>
  // Immediate Theme Setup (Prevent Flash of Unstyled Content)
  function setupTheme() {
    const isDark = localStorage.getItem('color-theme') === 'dark' || 
      (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
    
    const darkIcon = document.getElementById('theme-toggle-dark-icon');
    const lightIcon = document.getElementById('theme-toggle-light-icon');

    if (isDark) {
      document.documentElement.classList.add('dark');
      if(lightIcon) lightIcon.classList.remove('hidden');
      if(darkIcon) darkIcon.classList.add('hidden');
    } else {
      document.documentElement.classList.remove('dark');
      if(darkIcon) darkIcon.classList.remove('hidden');
      if(lightIcon) lightIcon.classList.add('hidden');
    }
  }
  
  // Run immediately
  setupTheme();

  // Handle Event Listeners (runs on every page navigation)
  function initHeader() {
    setupTheme(); // Re-check icons on navigation

    const themeToggleBtn = document.getElementById('theme-toggle');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    // Theme Toggle Logic
    if (themeToggleBtn) {
      // Remove old listeners to prevent duplication
      const newBtn = themeToggleBtn.cloneNode(true);
      themeToggleBtn.parentNode.replaceChild(newBtn, themeToggleBtn);
      
      newBtn.addEventListener('click', function() {
        const darkIcon = document.getElementById('theme-toggle-dark-icon');
        const lightIcon = document.getElementById('theme-toggle-light-icon');

        // Toggle icons
        darkIcon.classList.toggle('hidden');
        lightIcon.classList.toggle('hidden');

        // Toggle theme state
        if (localStorage.getItem('color-theme')) {
            if (localStorage.getItem('color-theme') === 'light') {
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
            } else {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
            }
        } else {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
            } else {
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
            }
        }
      });
    }

    // Mobile Menu Logic
    if (mobileMenuBtn && mobileMenu) {
       // Remove old listeners
       const newMenuBtn = mobileMenuBtn.cloneNode(true);
       mobileMenuBtn.parentNode.replaceChild(newMenuBtn, mobileMenuBtn);

       newMenuBtn.addEventListener('click', () => {
         mobileMenu.classList.toggle('hidden');
       });
    }
  }

  // Hook into Astro View Transitions
  document.addEventListener('astro:page-load', initHeader);
  // Also run on initial load if not using View Transitions or first visit
  initHeader();
</script>
