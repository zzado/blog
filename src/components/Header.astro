---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { BASE_URL } = import.meta.env;
const homeUrl = BASE_URL.endsWith('/') ? BASE_URL : BASE_URL + '/';

// Dynamic links based on current language
// Explicitly include 'ko/' for Korean to match file structure
const currentLangPrefix = lang + '/';
const postsUrl = homeUrl + currentLangPrefix + 'posts';
const aboutUrl = homeUrl + currentLangPrefix + 'about';

// Language Switcher Logic
const currentPath = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
let toggleLangUrl = '';

// Calculate Toggle URL based on strict /ko/ or /en/ structure
// If current is /ko/..., swap to /en/... and vice versa
if (currentPath.startsWith('/ko/') || currentPath === '/ko') {
    // Switch to EN
    const path = currentPath.replace(/^\/ko/, '');
    toggleLangUrl = homeUrl + 'en' + path;
} else if (currentPath.startsWith('/en/') || currentPath === '/en') {
    // Switch to KO
    const path = currentPath.replace(/^\/en/, '');
    toggleLangUrl = homeUrl + 'ko' + path;
} else {
    // Fallback for root (should be redirected anyway)
    toggleLangUrl = homeUrl + 'en/';
}
